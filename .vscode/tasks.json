{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "make",
    "type": "shell",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "tasks": [
        {
            "label": "all",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "flash",
            "problemMatcher": "$gcc"
        },
        {
            "label": "clean",
            "problemMatcher": "$gcc"
        },
        {
            "label": "monitor",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "menuconfig",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "defconfig",
            "problemMatcher": "$gcc"
        }
    ]
}